{
    "name": "WhaleDrop NFT Tools Beta",
    "manifest_version": 2,
    "version": "0.1",
    "description": "See your NFTs, NFT Market tools for Treasure Land, Bounce, and more!",

    "browser_action": { "default_popup": "login.html", "default_icon": "assets/whalelogo.png" },
    "icons": {
        "16": "assets/whalelogo.png",
        "48": "assets/whalelogo.png",
        "128": "assets/whalelogo.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "activeTab",
        "*//*.alpaca.city/*",
        "*//*.treasureland.market/*",
        "*//*.bounce.finance/*"
    ],
    "devtools_page": "devtools.html"
}